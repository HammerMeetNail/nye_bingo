# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
DEBUG=false
DEBUG_LOG_MAX_CHARS=8000

# PostgreSQL Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=bingo
DB_PASSWORD=your_secure_password_here
DB_NAME=nye_bingo
DB_SSLMODE=disable

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Email Configuration
EMAIL_PROVIDER=resend
RESEND_API_KEY=
EMAIL_FROM_ADDRESS=noreply@yearofbingo.com
APP_BASE_URL=http://localhost:8080

# Backup notifications (ops email)
# Comma-separated list of recipient email addresses.
BACKUP_NOTIFY_EMAILS=
# Set to 0 to disable daily "backup succeeded" email.
BACKUP_NOTIFY_SUCCESS=1
# Set to 1 to enable "verification succeeded" email (verification failures always email).
BACKUP_NOTIFY_VERIFY_SUCCESS=0

# AI Configuration
GEMINI_API_KEY=
GEMINI_MODEL=gemini-3-flash-preview
# Gemini 3 defaults to high "thinking" (slower). For lower latency, set to "low" or "minimal".
GEMINI_THINKING_LEVEL=minimal
# For Gemini 2.5 models: set >0 to enable "thinking mode" (higher = better quality, slower).
GEMINI_THINKING_BUDGET=0
GEMINI_TEMPERATURE=0.8
# 24 short goals should fit well under this; lower values reduce latency/cost.
GEMINI_MAX_OUTPUT_TOKENS=4096
